<script type="text/javascript">
    $(document).ready(function(){
        function moveLeft(object, speed) {
            $(object).animate({
                "left": "-=50px"
            }, speed);
        };
        function moveRight(object, speed) {
            $(object).animate({
                "left": "+=50px"
            }, speed);
        };
        for (i = 0; i < 1000; i++) {
            moveLeft("#blog", 10000);
            moveRight("#blog", 10000);
            moveRight("#projects", 15000);
            moveLeft("#projects", 15000);
            moveRight("#about", 5000);
            moveLeft("#about", 5000);
        };
        function shake(object) {
            $(object).animate({"left": "-=2px"},100);
            $(object).animate({"left": "+=4px"},100);
            $(object).animate({"left": "-=2px"},100);
        };
        $("#twitter").hover(function(){
            shake($(this));
        });
        $("#linkedin").hover(function(){
            shake($(this));
        });
        $("#github").hover(function(){
            shake($(this));
        });
        $("#email").hover(function(){
            shake($(this));
        });
    });
</script>

